<% include ../partials/header %>

 <div class="index-box">
    <div class="ib-header">
      <h1>Login</h1>
    </div>
    <form class="form-signin" action="/auth/login" method="POST" autocomplete="off">
      <div class="form-label-group">
        <input type="text" id="inputUsername" class="form-control" name="username" placeholder="Username" autofocus>
        <label for="inputUsername">Username</label>
      </div>
      <div class="form-label-group">
        <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password">
        <label for="inputPassword">Password</label>
      </div>
      <div class="form-group button">
        <button class="btn btn-lg btn-primary btn-block">Login</button>
      </div>
      <div class="form-group" id="forgot-pw">
        <a href="/auth/forgot" class="forgot-password">Forgot password?</a>
      </div>
    </form>
  </div>
  
<% include ../partials/footer %>