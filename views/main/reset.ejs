<% include ../partials/header %>

  <div class="index-box">
    <div class="ib-header">
      <h1>Reset Password</h1>
    </div>
    <form class="form-signin" action="/auth/reset/<%= token %>" method="POST" autocomplete="off">
      <div class="form-label-group">
        <input type="password" id="inputNewPassword" class="form-control" name="password" placeholder="New Password" autofocus>
        <label for="inputNewPassword">New Password</label>
      </div>
      <div class="form-label-group">
        <input type="password" id="confirmPassword" class="form-control" name="confirm" placeholder="Confirm Password">
        <label for="confirmPassword">Confirm Password</label>
      </div>
      <div class="form-group button">
        <button class="btn btn-lg btn-primary btn-block">Update Password</button>
      </div>
    </form>
  </div>
     
<% include ../partials/footer %>